{
  "openapi": "3.0.0",
  "paths": {
    "/mock": {
      "post": {
        "operationId": "MockController_createMock",
        "parameters": [],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/CreateMockApiDto"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Mock API created",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/MockEndpoint"
                }
              }
            }
          },
          "400": {
            "description": "Validation error"
          }
        },
        "summary": "Create a mock API",
        "tags": [
          "Mock Management APIs"
        ]
      },
      "put": {
        "operationId": "MockController_updateMock",
        "parameters": [],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/UpdateMockRequestDto"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Mock API updated",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/MockEndpoint"
                }
              }
            }
          },
          "400": {
            "description": "Validation error"
          }
        },
        "summary": "Update mock API",
        "tags": [
          "Mock Management APIs"
        ]
      },
      "get": {
        "operationId": "MockController_listMocks",
        "parameters": [
          {
            "name": "project",
            "required": false,
            "in": "query",
            "description": "Filter mock API List by Project",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "List of mock APIs",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/MockEndpoint"
                  }
                }
              }
            }
          }
        },
        "summary": "List all mock APIs",
        "tags": [
          "Mock Management APIs"
        ]
      }
    },
    "/mock/add/response": {
      "post": {
        "operationId": "MockController_appendResponse",
        "parameters": [],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/AppendResponseDto"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Append response to the mock API",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/MockEndpoint"
                }
              }
            }
          },
          "400": {
            "description": "Validation error"
          }
        },
        "summary": "Append new responses to the existing mock API",
        "tags": [
          "Mock Management APIs"
        ]
      }
    },
    "/mock/path": {
      "get": {
        "operationId": "MockController_listMockApiPath",
        "parameters": [
          {
            "name": "project",
            "required": false,
            "in": "query",
            "description": "Filter mock API List by Project",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "List all mock APIs Path Only",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/MockEndpointPathResponseDto"
                  }
                }
              }
            }
          }
        },
        "summary": "List all mock APIs Path Only",
        "tags": [
          "Mock Management APIs"
        ]
      }
    },
    "/mock/{id}": {
      "get": {
        "operationId": "MockController_getMockApiDetails",
        "parameters": [
          {
            "name": "id",
            "required": true,
            "in": "path",
            "description": "Details of a mock API by Id",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Mock API Details by ID",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/MockEndpoint"
                  }
                }
              }
            }
          },
          "400": {
            "description": "Validation error"
          }
        },
        "summary": "Details of a mock API by Id",
        "tags": [
          "Mock Management APIs"
        ]
      },
      "delete": {
        "operationId": "MockController_deleteMock",
        "parameters": [
          {
            "name": "id",
            "required": true,
            "in": "path",
            "description": "Mock ID to delete",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Mock deleted (true/false)"
          },
          "400": {
            "description": "Validation error"
          }
        },
        "summary": "Delete a mock API by Id",
        "tags": [
          "Mock Management APIs"
        ]
      }
    }
  },
  "info": {
    "title": "API Request Response Mocker",
    "description": "Manage mock endpoints (GET, POST, PUT, DELETE)",
    "version": "1.0",
    "contact": {}
  },
  "tags": [],
  "servers": [],
  "components": {
    "schemas": {
      "MockResponse": {
        "type": "object",
        "properties": {
          "request": {
            "type": "object",
            "example": {
              "userId": 5000050535
            }
          },
          "responseHeader": {
            "type": "object",
            "example": {
              "project-name": "KP"
            }
          },
          "response": {
            "type": "object",
            "example": {
              "message": "Success"
            }
          },
          "statusCode": {
            "type": "number",
            "default": 200
          },
          "delay": {
            "type": "number",
            "default": 0
          }
        },
        "required": [
          "request",
          "response"
        ]
      },
      "CreateMockApiDto": {
        "type": "object",
        "properties": {
          "project": {
            "type": "string",
            "example": "KP"
          },
          "path": {
            "type": "string",
            "example": "/api/user"
          },
          "method": {
            "type": "string",
            "enum": [
              "GET",
              "POST",
              "PUT",
              "DELETE"
            ],
            "example": "POST"
          },
          "responses": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/MockResponse"
            }
          }
        },
        "required": [
          "path",
          "method",
          "responses"
        ]
      },
      "MockEndpoint": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "example": "123e4567-e89b-12d3-a456-426614174000"
          },
          "project": {
            "type": "string",
            "example": "KP"
          },
          "method": {
            "type": "string",
            "enum": [
              "GET",
              "POST",
              "PUT",
              "DELETE"
            ],
            "example": "POST"
          },
          "path": {
            "type": "string",
            "example": "/api/user"
          },
          "responses": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/MockResponse"
            }
          }
        },
        "required": [
          "method",
          "path",
          "responses"
        ]
      },
      "UpdateMockRequestDto": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "example": "123e4567-e89b-12d3-a456-426614174000"
          },
          "project": {
            "type": "string",
            "example": "KP"
          },
          "method": {
            "type": "string",
            "enum": [
              "GET",
              "POST",
              "PUT",
              "DELETE"
            ],
            "example": "POST"
          },
          "path": {
            "type": "string",
            "example": "/api/user"
          },
          "responses": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/MockResponse"
            }
          }
        },
        "required": [
          "id",
          "project",
          "method",
          "path",
          "responses"
        ]
      },
      "AppendResponseDto": {
        "type": "object",
        "properties": {
          "apiPath": {
            "type": "string",
            "example": "api/user"
          },
          "project": {
            "type": "string",
            "example": "KP"
          },
          "newResponse": {
            "$ref": "#/components/schemas/MockResponse"
          }
        },
        "required": [
          "apiPath",
          "project",
          "newResponse"
        ]
      },
      "MockEndpointPathResponseDto": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "example": "123e4567-e89b-12d3-a456-426614174000"
          },
          "path": {
            "type": "string",
            "example": "/api/user"
          }
        },
        "required": [
          "id",
          "path"
        ]
      }
    }
  }
}